{% extends "layout.njk" %}

{% block head %}

<title>RocketLab-conteudos</title>


<link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
{% endblock%}

{% block content %}
  
    
    <div class="wrapper">
      <h1>Conte√∫dos</h1>
    </div>

    <section class="cards">

    {% for item in items %}
      <div class="card_roxo" id="{{item.id}}">
        <div class="card__logo">
          <img
            src="{{item.img}}"
            alt="" />
        </div>
        <div class="card__content">
          <p>
            {{item.title}}
          </p>
          <div class="card__info">
            <p>{{item.duration}}</p>
            <p>{{item.price}}</p>
          </div>
        </div>
      </div>
    {% endfor %}


    </section>

    <footer>
      <a href="https://github.com/Rocketseat" target="_blank">Github</a>
      <a href="https://www.instagram.com/rocketseat_oficial/" target="_blank"
        >Instagram
      </a>
      <a href="https://www.facebook.com/rocketseat/" target="_blank"
        >Facebook</a
      >
    </footer>

    <div class="modal-overlay">
      <div class="modal">
        <a href="" class="max-modal">
          <i class="material-icons">maximize</i>
        </a>

        <a href="" class="close-modal">
          <i class="material-icons">close</i>
        </a>

        <div class="modal-content"></div>
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
    
    <script src="scripts.js"></script>
 
 {% endblock%}}